@{
    ViewData["Title"] = "Home Page";
}
<!-- Overlay for the initial instruction -->
<div id="instructionOverlay" class="overlay">
    <div class="overlay-content">
        <h2 id="welcomeText">Welcome to the Map</h2>
        <p id="instructionText">Click anywhere on the map to start drawing.</p>
        <button type="button" id="closeOverlayButton">Got it!</button>
    </div>
</div>

<div>
    <!-- Language switcher dropdown -->
    <select id="languageSwitcher">
        <option value="en">English</option>
        <option value="no">Norsk</option>
        <!-- Add more options for other languages -->
    </select>


    

    <div id="map" style="height: 500px;"></div>

</div>